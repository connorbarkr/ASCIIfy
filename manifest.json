{
  "manifest_version": 2,

  "name": "ASCIIfy",
  "description": "This extension changes all images on a webpage into ASCII art.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "ASCIIfy!"
  },
  "icons": { "16": "icons/icon16.png",
             "24": "icons/icon24.png",
             "32": "icons/icon32.png",
             "64": "icons/icon64.png",
             "128": "icons/icon128.png" }
}
