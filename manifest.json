{
  "manifest_version": 2,

  "name": "ASCIIfy",
  "description": "This extension changes all images on a webpage into ASCII art.",
  "version": "0.0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "ASCIIfy Menu",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}
